generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  password      String
  email         String   @unique
  phone         String   @unique
  role_id       String   @db.ObjectId
  refresh_token String?  
  createdAt     DateTime @default(now())

  role   Role    @relation(fields: [role_id], references: [id])
  orders Order[]
}

model Role {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  role_name String
  users     User[]
}

model Product {
  id            String                   @id @default(auto()) @map("_id") @db.ObjectId
  product_name  String                   @unique
  image         String
  category      String
  description   String
  price         Int

  order_details          OrderDetail[]
  options                ProductOption[]
  inventory_transactions InventoryTransaction[]
}

model ProductOption {
  id        String             @id @default(auto()) @map("_id") @db.ObjectId
  product_id String           @db.ObjectId
  name      String             // contoh: Size, Ice, Sweetness
  createdAt DateTime           @default(now())

  product   Product @relation(fields: [product_id], references: [id], onDelete: Cascade)
  values   ProductOptionValue[]
}

model ProductOptionValue {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  option_id   String         @db.ObjectId
  label       String         // contoh: Regular, Large, Less Ice, Extra Sweet
  extra_price Int            @default(0) // contoh: Large +2000
  createdAt   DateTime       @default(now())

  option ProductOption @relation(fields: [option_id], references: [id], onDelete: Cascade)
  order_options OrderDetailOption[]
}

